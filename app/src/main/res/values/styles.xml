<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_style</item>
    </style>

    <!-- ======================== MainActivity ======================== -->
    <!-- backgroundColor -->
    <style name="mainActBackgColor" >
        <item name="android:background">@color/am_bgColor</item>
    </style>

    <style name="btnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/am_textColor</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/margin8</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/am_white</item>
        <item name="cornerRadius">@dimen/cRadius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding10</item>
        <item name="iconTint">@color/am_icoColor</item>
    </style>


    <!-- ======================== SettingsActivity ======================== -->
    <!--заголовок -->
    <style name="textStyleColor">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <!--switch_txt -->
    <style name="textStyleSetting" parent="textStyleColor">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--пункты меню -->
    <style name="textViewSetting" parent="textStyleColor">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/as_paddingLine</item>
        <item name="android:paddingBottom">@dimen/as_paddingLine</item>
    </style>

    <!--switch -->
    <style name="icoStyleSetting">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <style name="frameLayoutStyleSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/as_paddingLine</item>
        <item name="android:paddingBottom">@dimen/as_paddingLine</item>
    </style>

    <style name="StyleSwitchMaterial">
        <item name="android:paddingTop">@dimen/as_paddingLine</item>
        <item name="android:paddingBottom">@dimen/as_paddingLine</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ======================== ActivitySearch ======================== -->
    <style name="searchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="searchFrameStyle" parent="searchStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/searchTxt_24</item>
        <item name="android:paddingStart">@dimen/searchTxt_16</item>
        <item name="android:paddingEnd">@dimen/searchTxt_16</item>
    </style>

    <style name="searchEditTextStyle" parent="searchStyle">
        <item name="android:inputType">text</item>
        <item name="drawableStartCompat">@drawable/ic_search_txt</item>
        <item name="android:padding">@dimen/ash_padding13</item>
        <item name="android:paddingTop">@dimen/ash_paddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/ash_paddingTopBottom</item>
        <item name="android:drawablePadding">@dimen/ash_padding13</item>
        <item name="android:background">@color/as_backgroundSearch</item>
        <item name="android:textColorHint">@color/ic_gray</item>
        <item name="android:textColor">@color/black_txt</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ash_textSize</item>
    </style>

    <style name="textButtonStyleSearch" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:textColor">@color/white_txt</item>
        <item name="android:backgroundTint">@color/black_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/sv_bt_corner</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sv_tv_bt_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="tvStyle" parent="textStyleColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/sv_tv_bt_margin</item>
        <item name="android:layout_marginEnd">@dimen/sv_tv_bt_margin</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">@dimen/sv_tv_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <!-- ======================== search_view ======================== -->
    <style name="searchViewText" parent="textStyleColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">@string/am_header</item>
    </style>

    <style name="searchViewText_track" parent="searchViewText">
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="searchViewText_band" parent="searchViewText">
        <item name="android:paddingTop">1dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item> <!-- !!! CHANGE PREVIOUS textCOLOR !!!-->
    </style>

    <!-- history -->
    <style name="tvStyleHistory" parent="textStyleColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/sv_tv_bt_margin</item>
        <item name="android:layout_marginEnd">@dimen/sv_tv_bt_margin</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">@dimen/sv_tv_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="textButtonStyleClear" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:textColor">@color/white_txt</item>
        <item name="android:backgroundTint">@color/black_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/sv_bt_corner</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">@dimen/sv_tv_bt_margin</item>-->
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/txtSize_btnClear</item>

        <item name="android:layout_marginTop">@dimen/margin_top_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_top_24</item>
        <item name="android:paddingVertical">@dimen/btnClear_paddingVertical</item>
        <item name="android:paddingHorizontal">@dimen/btnClear_paddingHorizontal</item>
    </style>

    <!-- ======================== _view ======================== -->
</resources>