<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/am_white"
    android:orientation="vertical"
    android:padding="20dp">
    <!-- xmlns:tools="http://schemas.android.com/tools" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/am_settings"
        android:textColor ="@color/am_textColor"
        android:drawablePadding="28dp"
        android:textSize="@dimen/as_HeaderText"
        app:drawableStartCompat="@drawable/ic_arrow_back" />


    <FrameLayout
        style="@style/frameLayoutStyleSetting"
        android:layout_marginTop="40dp">
        <TextView
            style="@style/textStyleSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/as_theme" />

        <Switch
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/icoStyleSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <TextView
        style="@style/textViewSetting"
        android:text="@string/as_share"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        style="@style/textViewSetting"
        android:text="@string/as_support"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView
        style="@style/textViewSetting"
        android:text="@string/as_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />


</LinearLayout>